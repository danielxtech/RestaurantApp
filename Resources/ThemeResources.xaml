<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

  <!-- Colors -->
  <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
  <Color x:Key="ForegroundColor">#25393A</Color>
  <Color x:Key="CardColor">#FFFFFFFF</Color>
  <Color x:Key="CardForegroundColor">#25393A</Color>
  <Color x:Key="PrimaryColor">#030213</Color>
  <Color x:Key="PrimaryForegroundColor">#FFFFFF</Color>
  <Color x:Key="SecondaryColor">#F2F3F5</Color>
  <Color x:Key="SecondaryForegroundColor">#030213</Color>
  <Color x:Key="MutedColor">#ECECF0</Color>
  <Color x:Key="MutedForegroundColor">#717182</Color>
  <Color x:Key="DestructiveColor">red</Color>
  <Color x:Key="DestructiveForegroundColor">#FFFFFF</Color>
  <Color x:Key="SidebarColor">#FF2C3E50</Color>
  <Color x:Key="AccentColor">#FFE67E22</Color>
  <Color x:Key="AccentForegroundColor">#FFFFFF</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
  <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
  <SolidColorBrush x:Key="CardForegroundBrush" Color="{StaticResource CardForegroundColor}" />
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
  <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}" />
  <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
  <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}" />
  <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}" />
  <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource MutedForegroundColor}" />
  <SolidColorBrush x:Key="DestructiveBrush" Color="{StaticResource DestructiveColor}" />
  <SolidColorBrush x:Key="DestructiveForegroundBrush" Color="{StaticResource DestructiveForegroundColor}" />
  <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="AccentForegroundBrush" Color="{StaticResource AccentForegroundColor}" />

  <!-- Font sizes -->
  <System:Double x:Key="FontSizeBase">16</System:Double>
  <System:Double x:Key="FontSizeH1">24</System:Double>
  <System:Double x:Key="FontSizeH2">20</System:Double>
  <System:Double x:Key="FontSizeH3">18</System:Double>
  <System:Double x:Key="FontSizeH4">16</System:Double>

  <!-- Font weights -->
  <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
  <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>

  <!-- TextBlock Styles -->
  <Style TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
  </Style>

  <Style x:Key="H1TextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontSize" Value="{StaticResource FontSizeH1}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
  </Style>

  <Style x:Key="H2TextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontSize" Value="{StaticResource FontSizeH2}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
  </Style>

</ResourceDictionary>
