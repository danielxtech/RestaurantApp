<UserControl x:Class="RestaurantApp.Views.CartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid Margin="15" Background="#FFF8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="#FF2C3E50" Padding="15" CornerRadius="8" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🛒 YOUR ORDER CART" 
                           FontSize="18" 
                           FontWeight="Black" 
                           Foreground="White" 
                           FontFamily="Arial"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Items.Count, StringFormat= items}" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#BDC3C7" 
                           FontFamily="Segoe UI"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="0" Margin="0,0,0,10">
            <ListView ItemsSource="{Binding Items}" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0 0 0 1" BorderBrush="#ECF0F1" Padding="15" Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <TextBlock Text="{Binding Item.Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Foreground="#2C3E50"
                                               FontFamily="Segoe UI"/>
                                    <TextBlock Text="{Binding Item.Price, StringFormat=Price: C}" 
                                               FontSize="12" 
                                               Foreground="#7F8C8D"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button Content="➖" 
                                            Command="{Binding DataContext.DecreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            Background="#E74C3C"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Width="30"
                                            Height="30"
                                            BorderThickness="0"
                                            Margin="0,0,5,0"/>

                                    <Border Background="#3498DB" Padding="8,4" CornerRadius="12" MinWidth="40">
                                        <TextBlock Text="{Binding Quantity}" 
                                                   FontWeight="Bold" 
                                                   FontSize="13" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                    <Button Content="➕" 
                                            Command="{Binding DataContext.IncreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            Background="#27AE60"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Width="30"
                                            Height="30"
                                            BorderThickness="0"
                                            Margin="5,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Total, StringFormat=C}" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Foreground="#27AE60"
                                           VerticalAlignment="Center"
                                           Margin="15,0"/>

                                <Button Grid.Column="3"
                                        Content="🗑️" 
                                        Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" 
                                        Background="#95A5A6"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        Width="35"
                                        Height="35"
                                        BorderThickness="0"
                                        ToolTip="Remove item"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🍽️ Table Number:" 
                               FontWeight="Bold" 
                               FontSize="13" 
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4" Padding="2">
                        <TextBox Name="TableBox" 
                                 Width="80" 
                                 FontSize="13" 
                                 FontWeight="Bold" 
                                 BorderThickness="0" 
                                 Padding="8,6"
                                 TextAlignment="Center"
                                 Background="#F8F9FA"
                                 Text="1"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,15,0">
                        <TextBlock Text="Subtotal:" 
                                   FontSize="13" 
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding SubTotal, StringFormat=C}" 
                                   FontSize="18" 
                                   FontWeight="Black" 
                                   Foreground="#2C3E50"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>

                    <Button Content="🚀 PLACE ORDER" 
                            Command="{Binding PlaceOrderCommand}" 
                            CommandParameter="{Binding ElementName=TableBox, Path=Text}"
                            Background="#FFE67E22"
                            Foreground="White"
                            FontWeight="Black"
                            FontSize="14"
                            Padding="20,12"
                            BorderThickness="0"
                            Height="45"
                            MinWidth="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
