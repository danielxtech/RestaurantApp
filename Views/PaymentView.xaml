<UserControl x:Class="RestaurantApp.Views.PaymentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20" Background="#FFF8F9FA">
        <Border Background="White" CornerRadius="12" Padding="0" BorderBrush="#E0E0E0" BorderThickness="1" Width="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="#FF2C3E50" Padding="20" CornerRadius="12 12 0 0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="💳" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="PAYMENT SUMMARY" 
                                   FontSize="18" 
                                   FontWeight="Black" 
                                   Foreground="White" 
                                   FontFamily="Arial"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1">

                    <Border Background="#FFE67E22" Padding="10" CornerRadius="6" Margin="0,0,0,15">
                        <TextBlock Text="{Binding CurrentOrder.OrderId, StringFormat='ORDER #: {0}'}" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Order Items" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding CurrentOrder.Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0 0 0 1" BorderBrush="#ECF0F1" Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Item.Name}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13" 
                                                   Foreground="#2C3E50"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="×" 
                                                       Foreground="#7F8C8D"
                                                       Margin="0,0,5,0"/>
                                            <Border Background="#3498DB" Padding="4,2" CornerRadius="8">
                                                <TextBlock Text="{Binding Quantity}" 
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           FontSize="11"
                                                           MinWidth="15"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Total, StringFormat=C}" 
                                                   FontWeight="Bold" 
                                                   FontSize="13" 
                                                   Foreground="#27AE60"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"
                                                   Width="80"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <StackPanel Margin="0,20,0,0">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Subtotal:" 
                                       FontSize="14" 
                                       Foreground="#7F8C8D"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentOrder.SubTotal, StringFormat=C}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Tax:" 
                                       FontSize="14" 
                                       Foreground="#7F8C8D"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentOrder.Tax, StringFormat=C}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50"/>
                        </Grid>

                        <Border Background="#2C3E50" Padding="12" CornerRadius="6" Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="TOTAL:" 
                                           FontSize="15" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CurrentOrder.Total, StringFormat=C}" 
                                           FontSize="16" 
                                           FontWeight="Black" 
                                           Foreground="White"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="2" Background="#ECF0F1" Padding="20" CornerRadius="0 0 12 12">
                    <Button Content="PAY NOW" 
                            Command="{Binding PayCommand}" 
                            Background="#27AE60"
                            Foreground="White"
                            FontWeight="Black"
                            FontSize="14"
                            Padding="20,12"
                            BorderThickness="0"
                            Height="45"
                            HorizontalAlignment="Stretch"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>