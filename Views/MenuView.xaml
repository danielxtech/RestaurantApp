<UserControl x:Class="RestaurantApp.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:vm="clr-namespace:RestaurantApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <Grid Margin="10" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Categories -->
            <RowDefinition Height="*"/>
            <!-- Menu Items -->
        </Grid.RowDefinitions>

        <!-- Categories as horizontal scrollable panel -->
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="All Items" Margin="16" Command="{Binding FilterCommand}" CommandParameter="All"
                        Background="GreenYellow" Foreground="Black"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
                <Button Content="   Pasta  " Margin="10" Command="{Binding FilterCommand}" CommandParameter="Pasta"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
                <Button Content="Appetizers" Margin="10" Command="{Binding FilterCommand}" CommandParameter="Appetizers"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
                <Button Content=" Burgers  " Margin="10" Command="{Binding FilterCommand}" CommandParameter="Burgers"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
                <Button Content="   Wraps   " Margin="10" Command="{Binding FilterCommand}" CommandParameter="Wraps"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" Click="Button_Click_1" />
                <Button Content="  Pizzas  " Margin="10" Command="{Binding FilterCommand}" CommandParameter="Pizza"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
                <Button Content="  Drinks  " Margin="10" Command="{Binding FilterCommand}" CommandParameter="Drinks"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
                <Button Content="  Desserts " Margin="10" Command="{Binding FilterCommand}" CommandParameter="Dessert"
                        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource AccentForegroundBrush}"
                        FontWeight="Bold" Padding="8" BorderThickness="0" FontSize="13" />
            </StackPanel>
        </ScrollViewer>

        <!-- Menu items in a wrap panel -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding FilteredMenu}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True" HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource AccentBrush}" BorderThickness="2" Padding="12" Margin="6" 
                                Background="{DynamicResource CardBrush}" CornerRadius="12" Width="220">
                            <StackPanel>
                                <Grid>
                                    <Image Source="{Binding ImagePath}" Width="200" Height="150" Stretch="UniformToFill" />
                                    <Border Background="{DynamicResource AccentBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                            CornerRadius="8" Padding="4" Margin="4">
                                        <TextBlock Text="{Binding Price, StringFormat=C}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="Bold" FontSize="12"/>
                                    </Border>
                                </Grid>

                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryBrush}" 
                                           Margin="0,6,0,2" TextAlignment="Center"/>

                                <TextBlock Text="{Binding Description}" 
                                           FontSize="12" Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                           TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,6" />

                                <Button Content="➕ Add to Cart" 
                                        Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" 
                                        Background="Red"
                                        Foreground="{DynamicResource PrimaryForegroundBrush}"
                                        FontWeight="Bold"
                                        Padding="8"
                                        BorderThickness="0"     
                                        FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
