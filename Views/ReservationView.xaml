<UserControl x:Class="RestaurantApp.Views.ReservationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <DropShadowEffect x:Key="FunShadow" ShadowDepth="0" BlurRadius="20" Color="#FFFF6B88" Opacity="0.6"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6A11FF" Offset="0"/>
                <GradientStop Color="#FF2575FC" Offset="0.5"/>
                <GradientStop Color="#FF00FFB2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="20" Padding="0" BorderBrush="#FF6A11FF" BorderThickness="3" Width="420">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Padding="25" CornerRadius="20 20 0 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF6A11FF" Offset="0"/>
                            <GradientStop Color="#FF2575FC" Offset="0.5"/>
                            <GradientStop Color="#FF00FFB2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🎉" FontSize="24" Margin="0,0,15,0"/>
                        <TextBlock Text="LET'S BOOK YOUR PARTY!" 
                               FontSize="20" 
                               FontWeight="Black" 
                               Foreground="White" 
                               FontFamily="Comic Sans MS"
                               TextAlignment="Center"/>
                        <TextBlock Text="🎊" FontSize="24" Margin="15,0,0,0"/>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30" Background="#FFF0F8FF">
                    <StackPanel>

                        <TextBlock Text="🤵 NAME" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#FF6A11FF"
                               Margin="0,0,0,8"
                               FontFamily="Comic Sans MS"/>
                        <TextBox Text="{Binding Current.Name, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="14" 
                             Padding="15" 
                             BorderThickness="2" 
                             BorderBrush="#FF6A11FF"
                             Background="#FFFFF8E1"
                             Margin="0,0,0,20"
                             Height="55"
                             FontFamily="Segoe UI"
                             Foreground="#FF2575FC"/>

                        <TextBlock Text="📞 Phone Number" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#FF2575FC"
                               Margin="0,0,0,8"
                               FontFamily="Comic Sans MS"/>
                        <TextBox Text="{Binding Current.Phone, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="14" 
                             Padding="15" 
                             BorderThickness="2" 
                             BorderBrush="#FF2575FC"
                             Background="#FFE1F7FF"
                             Margin="0,0,0,20"
                             Height="55"
                             FontFamily="Segoe UI"
                             Foreground="#FF00B2FF"/>
                        
                        <TextBlock Text="👥 Number of Guests" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#FF00B2FF"
                               Margin="0,0,0,8"
                               FontFamily="Comic Sans MS"/>
                        <TextBox Text="{Binding Current.Guests, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="14" 
                             Padding="15" 
                             BorderThickness="2" 
                             BorderBrush="#FF00B2FF"
                             Background="#FFE8FFE8"
                             Margin="0,0,0,20"
                             Height="55"
                             FontFamily="Segoe UI"
                             Foreground="#FF00CC66"/>

                        <TextBlock Text="🕐 Date and Time" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#FF00CC66"
                               Margin="0,0,0,8"
                               FontFamily="Comic Sans MS"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DatePicker Grid.Column="0" 
                                    SelectedDate="{Binding Current.DateTime, Mode=TwoWay}" 
                                    FontSize="13" 
                                    Padding="12" 
                                    BorderThickness="2" 
                                    BorderBrush="#FF00CC66"
                                    Background="#FFFFF0F5"
                                    Height="55"/>

                            <TextBlock Grid.Column="1" Text="🕐" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="20"
                                   Margin="10,0"/>

                            <TextBox Grid.Column="2" 
                                 Text="{Binding Current.DateTime, StringFormat='t', Mode=TwoWay}" 
                                 FontSize="13" 
                                 Padding="15" 
                                 BorderThickness="2" 
                                 BorderBrush="#FFFF6B88"
                                 Background="#FFFFF0F5"
                                 Height="55"
                                 Foreground="#FFFF6B88"/>
                        </Grid>

                        <TextBlock Text="💫 ANY SPECIAL MAGIC REQUESTS?" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#FFFF6B88"
                               Margin="0,0,0,8"
                               FontFamily="Comic Sans MS"/>
                        <TextBox Text="{Binding Current.Notes, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="14" 
                             Padding="15" 
                             BorderThickness="2" 
                             BorderBrush="#FFFF6B88"
                             Background="#FFFFF8E1"
                             Margin="0,0,0,25"
                             Height="90"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Segoe UI"
                             Foreground="#FF6A11FF"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Padding="25" CornerRadius="0 0 20 20">
                    <Border.Background>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#FFFF6B88" Offset="0"/>
                            <GradientStop Color="#FF6A11FF" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                    <Button Content="🎊 LET'S DO THIS! 🎊" 
                        Command="{Binding SaveReservationCommand}" 
                        Background="White"
                        Foreground="#FF6A11FF"
                        FontWeight="Black"
                        FontSize="16"
                        Padding="25,15"
                        BorderThickness="3"
                        BorderBrush="#FFFF6B88"
                        Height="55"
                        HorizontalAlignment="Stretch"
                        FontFamily="Comic Sans MS"
                        Effect="{StaticResource FunShadow}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>

</UserControl>
