<UserControl x:Class="RestaurantApp.Views.AdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15" Background="#FFF8F9FA">
        <StackPanel>
            <Border Background="#FF2C3E50" Padding="15" CornerRadius="8" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👨‍💼 ADMIN DASHBOARD" 
                               FontSize="18" 
                               FontWeight="Black" 
                               Foreground="White" 
                               FontFamily="Arial"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" - Order Management" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#BDC3C7" 
                               FontFamily="Segoe UI"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="🔄 Refresh Orders" 
                        Command="{Binding RefreshCommand}" 
                        Background="#FF3498DB"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="13"
                        Padding="15,8"
                        BorderThickness="0"
                        Width="220"/>
                <TextBlock Text="📊 Live Order Tracking" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#7F8C8D"
                           FontFamily="Segoe UI"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
            </StackPanel>

            <Border BorderThickness="0" CornerRadius="8" Background="White" Padding="0">
                <ListView ItemsSource="{Binding Orders}" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0 0 0 1" BorderBrush="#ECF0F1" Padding="15" Margin="0" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Width="150">
                                        <Border Background="#FFE67E22" Padding="6" CornerRadius="4" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding OrderId, StringFormat='Order '}" 
                                                       FontWeight="Black" 
                                                       FontSize="12" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='📅 {0:MMM dd, yyyy}'}" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6"
                                                   FontFamily="Consolas"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='⏰ {0:hh:mm tt}'}" 
                                                   FontSize="11" 
                                                   Foreground="#95A5A6"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="15,0">
                                        <TextBlock Text="🍽️ Order Items:" 
                                                   FontWeight="Bold" 
                                                   FontSize="12" 
                                                   Foreground="#2C3E50"
                                                   Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#F8F9FA" Padding="8" CornerRadius="4" Margin="0,2">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Item.Name}" 
                                                                       Width="220"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#2C3E50"/>
                                                            <TextBlock Text="×" 
                                                                       Foreground="#7F8C8D"
                                                                       Margin="10,0,5,0"/>
                                                            <Border Background="#3498DB" Padding="4,2" CornerRadius="10">
                                                                <TextBlock Text="{Binding Quantity}" 
                                                                           FontWeight="Bold"
                                                                           Foreground="White"
                                                                           FontSize="10"
                                                                           HorizontalAlignment="Center"
                                                                           MinWidth="20"/>
                                                            </Border>
                                                            <TextBlock Text="{Binding Item.Price, StringFormat=' @ {0:C}'}" 
                                                                       Foreground="#27AE60"
                                                                       FontWeight="SemiBold"
                                                                       Margin="10,0,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <Border Background="#27AE60" Padding="10" CornerRadius="6">
                                            <TextBlock Text="{Binding Total, StringFormat='💰 {0:C}'}" 
                                                       FontWeight="Black" 
                                                       FontSize="14" 
                                                       Foreground="White"/>
                                        </Border>
                                        <Button Content="✅ Complete" 
                                                Background="#2ECC71"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                FontSize="11"
                                                Padding="10,5"
                                                BorderThickness="0"
                                                Margin="0,8,0,0"
                                                Width="80"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <Border Background="#34495E" Padding="10" CornerRadius="6" Margin="0,15,0,0">
                <TextBlock Text="📈 Real-time order monitoring system active" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="#BDC3C7" 
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
